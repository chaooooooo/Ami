<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
            <!-- 边框的宽度和颜色颜色 -->
            <stroke
                android:width="5px"
                android:color="#aa3333aa" />

            <!-- 背景色 -->
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dip" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
            <!-- 边框的宽度和颜色颜色 -->
            <stroke
                android:width="2px"
                android:color="#FFFFFF" />

            <!-- 背景色 -->
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</selector>