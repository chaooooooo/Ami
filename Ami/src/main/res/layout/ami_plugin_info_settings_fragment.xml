<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/ami_fps_settings"
        android:text="@string/ami_fps_settings"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="@android:color/primary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/ami_info_settings_app"
        android:text="@string/ami_info_settings_app"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="@android:color/primary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/ami_info_settings_log"
        android:text="@string/ami_info_settings_log"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="@android:color/primary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>