<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/logcat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <chao.app.ami.plugin.AmiPluginSettingsPane
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:minWidth="400dp"
            android:focusable="true">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ami_plugin_logcat_settings_clear"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ami_drawable_clear"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp" />

                <ToggleButton
                    android:id="@+id/ami_plugin_logcat_settings_pause"
                    android:background="@drawable/ami_bg_pause"
                    android:textOn="@null"
                    android:textOff="@null"
                    android:checked="false"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </chao.app.ami.plugin.AmiPluginSettingsPane>
    </FrameLayout>
</HorizontalScrollView>
